<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.GameActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarGame"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize" />

    <ProgressBar
        android:id="@+id/progressBarGame"
        app:layout_constraintTop_toBottomOf="@id/toolbarGame"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        style="?android:progressBarStyleHorizontal"
        android:progressDrawable="@drawable/custom_progressbar_bg"
        android:visibility="invisible"
        tools:visibility="visible"/>

    <TextView
        android:id="@+id/tvGameTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/toolbarGame"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="invisible"
        tools:text="60"
        android:textSize="26sp"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/tvGameScore"
        app:layout_constraintTop_toBottomOf="@id/progressBarGame"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:textSize="30sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Score:"/>

    <LinearLayout
        android:id="@+id/llGameScore"
        app:layout_constraintTop_toBottomOf="@id/tvGameScore"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/tvGameLeftScore"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:text="0"
            android:textSize="30sp"/>

        <TextView
            android:id="@+id/tvDash"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:text="/"
            android:textSize="30sp"/>

        <TextView
            android:id="@+id/tvGameRightScore"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:text="0"
            android:textSize="30sp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tvGameEnglishDescription"
        app:layout_constraintTop_toBottomOf="@id/llGameScore"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textSize="20sp"
        android:text="Translate the following to Canto:"/>

    <TextView
        android:id="@+id/tvGameEnglishTranslation"
        app:layout_constraintTop_toBottomOf="@id/tvGameEnglishDescription"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        tools:text="Hello"/>

    <TextView
        android:id="@+id/tvCountdown"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="3"
        android:visibility="invisible"
        android:textSize="400sp"
        android:textColor="@color/teal_200" />

    <TextView
        android:id="@+id/tvDifficultySetting"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="250dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select a difficulty: "
        android:textSize="30sp"
        android:textColor="@color/black"
        android:gravity="center"
        tools:visibility="invisible"/>

    <LinearLayout
        android:id="@+id/llDifficultyButtons"
        app:layout_constraintTop_toBottomOf="@id/tvDifficultySetting"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:weightSum="3"
        tools:visibility="invisible">

        <Button
            android:id="@+id/btnEasyDifficulty"
            android:layout_margin="5dp"
            android:layout_width="150dp"
            android:layout_height="0dp"
            android:text="Easy"
            android:layout_weight="1" />
        <Button
            android:id="@+id/btnMediumDifficulty"
            android:layout_margin="5dp"
            android:layout_width="150dp"
            android:layout_height="0dp"
            android:text="Med"
            android:layout_weight="1" />
        <Button
            android:id="@+id/btnHardDifficulty"
            android:layout_margin="5dp"
            android:layout_width="150dp"
            android:layout_height="0dp"
            android:text="Hard"
            android:layout_weight="1" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>